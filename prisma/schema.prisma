generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String?   @unique
  name         String?
  image        String?
  createdAt    DateTime  @default(now())
  apiKey       String?   @unique
  workspaces   Workspace[]
}

model Workspace {
  id        String     @id @default(cuid())
  name      String
  ownerId   String
  owner     User       @relation(fields: [ownerId], references: [id])
  createdAt DateTime   @default(now())
  sites     Site[]
}

model Site {
  id          String     @id @default(cuid())
  name        String
  workspaceId String
  workspace   Workspace  @relation(fields: [workspaceId], references: [id])
  createdAt   DateTime   @default(now())

  pages       Page[]
}

model Page {
  id        String    @id @default(cuid())
  siteId    String
  site      Site      @relation(fields: [siteId], references: [id])
  name      String
  path      String
  blocks    Json
  updatedAt DateTime  @updatedAt
  createdAt DateTime  @default(now())
}

model AIJob {
  id        String   @id @default(cuid())
  type      String
  status    String   @default("pending")
  input     Json
  output    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ExportJob {
  id        String   @id @default(cuid())
  siteId    String
  status    String   @default("pending")
  resultUrl String?
  logs      Json?
  createdAt DateTime @default(now())
}

model DeployJob {
  id        String   @id @default(cuid())
  siteId    String
  status    String   @default("pending")
  logs      Json?
  createdAt DateTime @default(now())
}
